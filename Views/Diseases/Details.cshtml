<div class="container mt-5">
    <h4>
        <b>Detail Cure</b>
    </h4>
    <hr />
</div>
<div class="container">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <div class="d-flex justify-content-between form-group form-row mt-4">

        <a asp-action="Edit" asp-route-id="@Model.DiseaseId" class="btn btn-primary mr-2">
