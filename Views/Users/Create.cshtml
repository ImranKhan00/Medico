@model FYP.Models.User

@{
    Layout = null;
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
<!-- Google Fonts -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
<!-- Bootstrap core CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
<!-- Material Design Bootstrap -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css" rel="stylesheet">
<!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/js/mdb.min.js"></script>



<div class="container-fluid pt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-10">
            <h2 class="font-weight-bold">
                <b>Add User</b>
            </h2>

            <hr />
            <div class="container">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-4">
                            <!-- Material outline input with prefix-->
                            <div class="md-form md-outline">
                                <i class="fas fa-user prefix"></i>
                                <input asp-for="Name" class="form-control">
                                <label asp-for="Name" class="control-label"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <!-- Material outline input with prefix-->
                            <div class="md-form md-outline">
                                <i class="fas fa-envelope prefix"></i>
                                <input asp-for="Email" class="form-control">
                                <label asp-for="Email" class="control-label"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <!-- Material outline input with prefix-->
                            <div class="md-form md-outline">
                                <i class="fas fa-lock prefix"></i>
                                <input asp-for="Password" class="form-control">
                                <label asp-for="Password" class="control-label"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <!-- Material outline input with prefix-->
                            <div class="md-form md-outline">
                                <i class="fas fa-phone prefix"></i>
                                <input asp-for="Contact" class="form-control">
                                <label asp-for="Contact" class="control-label"></label>
                                <span asp-validation-for="Contact" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Material outline input with prefix-->
                            <div class="md-form md-outline">
                                <i class="fas fa-industry prefix"></i>
                                <input asp-for="Country" class="form-control">
                                <label asp-for="Country" class="control-label"></label>
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Material outline input with prefix-->
                            <div class="md-form md-outline">
                                <i class="fas fa-credit-card prefix"></i>
                                <input asp-for="Address" class="form-control">
                                <label asp-for="Address" class="control-label"></label>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between form-group form-row mt-4">

                        <input type="submit" value="Create" class="btn btn-default ml-5" />
                        <a asp-action="Index" class="btn btn-secondary mr-2">
                            <i class="fas fa-backspace"></i>
                            <span>
                                <strong>Back to List</strong>
                            </span>
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
